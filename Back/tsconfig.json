{
    "compilerOptions": {
      "target": "es6",
      "lib": ["es2021", "dom"],
      "module": "commonjs",
      "outDir": "build",
      "rootDir": "./",
      "strict": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "src/generateApi.ts", "routes/**/*"],
    "exclude":[
        "./node_modules"
      ]
    
  }
  